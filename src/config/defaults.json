{
  "services": {
    "name": "recommendation",
    "version": "v1",
    "style": "RPC",
    "uris": {
      "product.info": "catalog:product.info",
    }
  },
  "models": {
    "ViewsByCustomer": "./models/viewsByCustomerModel",
    "ViewsByProduct": "./models/viewsByProductModel"
  },
  "bus": {
    "engines": {
      "local": {
        "handler": "./local"
      },
      "amqp": {
        "handler": "./amqp",
        "url": "amqp://bus"
      }
    },
    "channels": {
      "products": {
        "name": "PRODUCTS",
        "engine": "amqp"
      }
    }
  },
  "cache": {
    "alsoViewed": 3600000
  },
  "maxViewByCustomer": 10,
  "separationBetweenSessionsInMinutes": 30,
  "relatedLimit": 10
}
